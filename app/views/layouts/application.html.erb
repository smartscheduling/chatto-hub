<!DOCTYPE html>
<html>
<head>
  <title>Chatto</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

  <%= render 'layouts/nav' %>
  <%= render 'layouts/flash' %>

  <div class="container">
    <div class="row">
      <div id="toast-container" class="col s12"></div>
    </div>

    <div class="col s8">
      <%= yield %>
    </div>
  </div>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
