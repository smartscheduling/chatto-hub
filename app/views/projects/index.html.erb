
<div id="projects">
  <div class="title">Projects</div>
  <ul>
    <%- @projects.each do |proj| %>
      <li>
        <div class="row">
          <div class="large-8 columns">
            <p class=""><span class="name"><%= proj.name %></span></p>
            <p class="description"><%= proj.description %></p>

          </div>

        <div class="large-4 columns">
          <%= link_to proj.github_url, class: 'button tiny' do %>
            <i class="fa fa-github fa-2x"></i>
          <% end %>

          <%= link_to project_slack_invitations_path(proj), method: :post, class: 'button tiny' do %>
            <i class="fa fa-slack fa-2x"></i>
          <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
